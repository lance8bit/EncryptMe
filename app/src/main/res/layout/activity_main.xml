<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/texto_inserted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:ems="10"
            android:hint="Text a cifrar"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/texto_cifrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Texto cifrado"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/texto_descifrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Texto Descifrado"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/cifrarBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cifrar_guardar"
            android:text="Cifrar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>